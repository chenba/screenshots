{
  "name": "firefox-screenshots-addon",
  "description": "An addon for creating better shareable versions of content.",
  "version": "31.0.0",
  "author": "Mozilla (https://mozilla.org/)",
  "bugs": {
    "url": "https://github.com/mozilla-services/screenshots/issues"
  },
  "devDependencies": {
    "addons-linter": "0.27.0",
    "david": "11.0.0",
    "eslint": "4.8.0",
    "eslint-plugin-mozilla": "0.4.4",
    "eslint-plugin-no-unsanitized": "2.0.1",
    "eslint-plugin-promise": "3.5.0",
    "eslint-plugin-react": "^7.3.0",
    "geckodriver": "1.10.0",
    "jpm": "1.3.1",
    "mocha": "4.0.1",
    "node-sass": "4.5.3",
    "nodemon": "1.12.1",
    "npm-run-all": "4.1.1",
    "nsp": "2.8.1",
    "pontoon-to-webext": "1.0.2",
    "selenium-webdriver": "4.0.0-alpha.1",
    "svgo": "1.0.3",
    "web-ext": "2.1.0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "homepage": "https://screenshots.firefox.com",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mozilla-services/screenshots.git"
  },
  "scripts": {
    "lint": "npm-run-all lint:*",
    "lint:addon": "pushd .. && make zip && addons-linter ./build/screenshots.zip -o text && popd",
    "lint:js": "eslint .",
    "postlint": "nsp check -o summary",
    "nsp": "nsp check",
    "posttest": "npm run lint",
    "test": "pushd .. && bin/test-helpers/make_addon_with_unavailable_server && popd && NODE_PATH=node_modules:$NODE_PATH mocha ../test/",
    "test:selenium": "pushd .. && bin/test-helpers/make_addon_with_unavailable_server && popd && mocha ../test/test.js",
    "make_versions_exact": "node ../bin/build-scripts/make_versions_exact.js",
    "update_outdated": "david update && npm run make_versions_exact && npm update && npm outdated",
    "svgo": "svgo --folder=webextension/icons"
  }
}
